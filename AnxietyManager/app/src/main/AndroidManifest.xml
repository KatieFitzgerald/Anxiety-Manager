<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katiefitzgerald.anxietymanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

  <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CreateAccountActivity"></activity>
        <activity android:name=".activities.SensedActivity"></activity>
        <activity android:name=".activities.HomeActivity"></activity>
        <activity android:name=".activities.WhatsUpActivity"
            android:label=" "
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden" ></activity>
        <activity android:name=".activities.ThoughtsActivity"
            android:windowSoftInputMode="stateHidden" ></activity>
        <activity android:name=".activities.PhysicalActivity"></activity>
        <activity android:name=".activities.MoodActivity"></activity>
        <activity android:name=".activities.RateTwoMoodActivity"></activity>
        <activity android:name=".activities.RateOneMoodActivity"></activity>
        <activity android:name=".activities.ReactActivity"></activity>
        <activity android:name=".activities.CalendarActivity"></activity>
        <activity android:name=".activities.InsightActivity"></activity>



  </application>

</manifest>