<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katiefitzgerald.anxietymanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreateAccountActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SensedActivity"></activity>
        <activity android:name=".HomeActivity"></activity>
        <activity android:name=".WhatsUpActivity"
            android:windowSoftInputMode="stateHidden" ></activity>
        <activity android:name=".ThoughtsActivity"
            android:windowSoftInputMode="stateHidden" ></activity>
        <activity android:name=".PhysicalActivity"></activity>
        <activity android:name=".MoodActivity"></activity>
        <activity android:name=".RateMoodActivity"></activity>
        <activity android:name=".ReactActivity"></activity>
        <activity android:name=".LoginActivity"></activity>

    </application>

</manifest>