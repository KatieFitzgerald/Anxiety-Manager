<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.katiefitzgerald.anxietymanager.HomeActivity">

    <Button
        android:id="@+id/sensedAnxiety"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/profileBtn"
        android:text="Sensed"
        android:background="@drawable/shape"
        tools:targetApi="m" />

    <Button
        android:id="@+id/calendarButton"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cycleBtn"
        android:text="Calendar"
        android:background="@drawable/shape"
        tools:targetApi="m" />

    <Button
        android:id="@+id/cycleBtn"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/sensedAnxiety"
        android:text="Cycle"
        android:background="@drawable/shape"
        tools:targetApi="m" />

    <Button
        android:id="@+id/profileBtn"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Profile"
        android:background="@drawable/shape"
        tools:targetApi="m" />

    <Button
        android:id="@+id/addAnxiety"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/worriesChart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:elevation="0dp"
        android:text="Log Today's Anxiety Episode"
        android:textColor="#FFFFFF"
        tools:targetApi="m" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/worriesChart"
        android:layout_below="@+id/welcomeText"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif"
        android:text="Your current worries..."
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:textSize="24sp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/worriesChart"
        android:layout_width="340dp"
        android:layout_height="350dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="12dp"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>