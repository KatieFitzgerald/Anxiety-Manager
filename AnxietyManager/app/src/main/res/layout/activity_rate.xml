<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textColor="#33BBFF"
        android:text="Rate Mood"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <SeekBar
        android:id="@+id/seekBarMoodOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView13"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/seekBarValMoodOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarMoodOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/textView31"
        app:srcCompat="@drawable/distracted" />

    <SeekBar
        android:id="@+id/seekBarMoodTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView14"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/seekBarValMoodTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarMoodTwo"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/seekBarValMoodOne" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_below="@+id/seekBarValMoodOne"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/embarrassed" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBarValMoodTwo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:text="Overall Mood"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <SeekBar
        android:id="@+id/seekBarOverall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/moodBad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView22"
        android:layout_below="@+id/seekBarOverall"
        android:layout_marginTop="10dp"
        android:text="Bad"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/moodGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moodBad"
        android:layout_alignBottom="@+id/moodBad"
        android:layout_alignStart="@+id/next"
        android:layout_marginStart="12dp"
        android:text="Good"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_marginBottom="19dp"
        android:layout_toEndOf="@+id/seekBarValMoodOne"
        android:text="Mood name" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/seekBarValMoodOne"
        android:text="Mood name 2" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="How did you react?"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="#FF9999" />


</RelativeLayout>