<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Where?"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/subject"
            android:layout_below="@+id/textView26"
            android:text="x"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/location"
            android:text="What?"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/subject"
            android:layout_alignBottom="@+id/subject"
            android:layout_toStartOf="@+id/subject"
            android:text="Subject: "
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView28"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/textView28"
            android:text="Subject"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/thought"
            android:text="Reaction: "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/reaction"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/thought"
            android:layout_below="@+id/thought"
            android:text="Reaction"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/subject"
            android:text="Thought: "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/thought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/subject"
            android:layout_below="@+id/subject"
            android:layout_marginBottom="5dp"
            android:text="Thought"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </RelativeLayout>
</ScrollView>